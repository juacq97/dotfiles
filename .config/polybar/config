[bar/panel]
monitor	=
width = 100%
height = 25
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true
locale = es_MX.UTF-8
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Urbanist:size=10:antialias=true;1
font-1 = MaterialDesignIcons:pixelsize=11:antialias=true;2
font-2 = Weather Icons:size=12;3

modules-left = hlwm title
modules-center = date
modules-right = spotify clima pulseaudio mic-volume battery network
tray-position = none
cursor-click = pointer
cursor-scroll = ns-resize

[module/hlwm]
type = custom/script
exec = ~/.config/polybar/scripts/info-hlwm-workspaces.sh
tail = true

[module/title]
type = internal/xwindow
